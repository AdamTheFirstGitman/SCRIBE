# Plume & Mimir Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# =============================================================================
# AI SERVICES API KEYS
# =============================================================================
# Claude API (Primary LLM for agents)
CLAUDE_API_KEY=sk-ant-api03-your-claude-key

# OpenAI API (Whisper transcription + embeddings)
OPENAI_API_KEY=sk-your-openai-key

# Perplexity API (Deep search capabilities)
PERPLEXITY_API_KEY=pplx-your-perplexity-key

# Tavily API (Web search integration)
TAVILY_API_KEY=tvly-your-tavily-key

# =============================================================================
# REDIS CONFIGURATION (CACHE)
# =============================================================================
REDIS_URL=redis://default:password@redis-endpoint:port
# For Redis Cloud: redis://default:password@redis-12345.c1.region.ec2.redislabs.com:12345

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment mode
NODE_ENV=development
PYTHON_ENV=development

# API Configuration
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Security
JWT_SECRET=your-jwt-secret-key
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# APM (optional - for production monitoring)
DATADOG_API_KEY=your-datadog-key
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# LLM Configuration
MAX_TOKENS_PLUME=4000
MAX_TOKENS_MIMIR=4000
TEMPERATURE_PLUME=0.3
TEMPERATURE_MIMIR=0.2

# Cache Configuration
CACHE_TTL_EMBEDDINGS=604800  # 7 days in seconds
CACHE_TTL_TRANSCRIPTIONS=86400  # 24 hours
CACHE_TTL_LLM_RESPONSES=3600  # 1 hour

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# FRONTEND SPECIFIC (Next.js)
# =============================================================================
# These will be prefixed with NEXT_PUBLIC_ automatically
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_OFFLINE_SUPPORT=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Render.com deployment
RENDER_SERVICE_NAME=plume-mimir
RENDER_REGION=oregon

# Vercel deployment (frontend)
VERCEL_PROJECT_NAME=plume-mimir-frontend
VERCEL_ORG_ID=your-vercel-org-id

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Supabase backup settings (configured in dashboard)
BACKUP_RETENTION_DAYS=30
POINT_IN_TIME_RECOVERY=true

# =============================================================================
# COSTS MONITORING
# =============================================================================
# Monthly budget alerts (in EUR)
MONTHLY_BUDGET_ALERT=100
DAILY_BUDGET_ALERT=5

# Token usage tracking
TRACK_TOKEN_USAGE=true
MAX_MONTHLY_TOKENS=1000000

# =============================================================================
# RENDER.COM API (FOR ENV SYNC SCRIPT)
# =============================================================================
# Get your API key: https://dashboard.render.com/ → Account Settings → API Keys
# Required for syncing secrets to Render: python scripts/sync_env_to_render.py
RENDER_API_KEY=rnd_your_api_key_here