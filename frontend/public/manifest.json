  "shortcuts": [
    {
      "name": "New Chat",
      "short_name": "Chat",
      "description": "Start a new conversation with AI agents",
      "url": "/chat",
      "icons": [
        {
          "src": "/icons/shortcut-chat.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Archives",
      "short_name": "Archives",
      "description": "Browse your knowledge archives",
      "url": "/archives",
      "icons": [
        {
          "src": "/icons/shortcut-archives.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Voice Recording",
      "short_name": "Voice",
      "description": "Quick voice note capture",
      "url": "/chat?mode=voice",
      "icons": [
        {
          "src": "/icons/shortcut-voice.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],

  "categories": [
    "productivity",
    "utilities",
    "education",
    "business"
  ],

  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": [
            "text/plain",
            "text/markdown",
            "application/pdf",
            "image/*",
            "audio/*"
          ]
        }
      ]
    }
  },

  "file_handlers": [
    {
      "action": "/files",
      "accept": {
        "text/plain": [".txt"],
        "text/markdown": [".md"],
        "application/pdf": [".pdf"]
      }
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "plume",
      "url": "/protocol?url=%s"
    }
  ],

  "handle_links": "preferred",

  "launch_handler": {
    "client_mode": ["navigate-existing", "navigate-new"]
  },

  "edge_side_panel": {
    "preferred_width": 400
  },

  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],

  "prefer_related_applications": false,

  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",

  "dir": "ltr",

  "related_applications": [],

  "note_taking": {
    "new_note_url": "/chat?mode=note"
  }
}