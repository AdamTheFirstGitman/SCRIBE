{
  "name": "Koda",
  "description": "Agent codeur spécialisé Claude Code avec outils supplémentaires",
  "version": "1.0",
  "capabilities": [
    "Code Generation",
    "Test Creation",
    "Pattern Implementation",
    "Claude Code Integration"
  ],
  "tools_required": [
    "golem",
    "fastapi",
    "pytest",
    "pydantic"
  ],
  "environment": {
    "python_version": "3.11+",
    "venv_required": true,
    "claude_code": true
  },
  "structure": {
    "main": "koda_agent.py",
    "config": "koda.json",
    "docs": ["CLAUDE.md", "XP.md"],
    "patterns": "patterns/"
  },
  "specializations": [
    "FastAPI Development",
    "CRUD Operations",
    "Test Automation",
    "Data Models",
    "Input Validation"
  ],
  "communication": {
    "input_format": "Dict[str, Any] from Leo",
    "output_format": "Dict[str, Any] with code/tests/files",
    "common_prompts": "Applied automatically"
  }
}