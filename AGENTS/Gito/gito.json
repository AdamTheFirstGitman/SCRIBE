{
  "name": "Gito",
  "description": "Agent Gito spécialisé utilisant MCP Git pour gestion repositories",
  "version": "1.0",
  "capabilities": [
    "Repository Status",
    "Branch Management",
    "Commit Operations",
    "Merge Management",
    "MCP Git Integration"
  ],
  "tools_required": [
    "git",
    "gh"
  ],
  "mcp_required": [
    "git"
  ],
  "environment": {
    "git_version": ">=2.30",
    "github_cli": true,
    "mcp_git": true,
    "claude_code": true
  },
  "structure": {
    "main": "gito_agent.py",
    "config": "gito.json",
    "docs": ["CLAUDE.md", "XP.md"],
    "mcp_tools": "../../tools/mcp/gito_mcp.py"
  },
  "specializations": [
    "Status & Diff Analysis",
    "Branch Creation & Switching",
    "Commit with Smart Messages",
    "Merge Conflict Resolution",
    "Repository Orchestration"
  ],
  "communication": {
    "input_format": "Dict[str, Any] from Leo",
    "output_format": "Dict[str, Any] with git_status/results",
    "mcp_integration": "Native MCP Git calls"
  }
}